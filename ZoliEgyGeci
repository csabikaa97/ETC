				alert(temp*1.25+" Ft az új fizetés.");
			}
			else {
				alert("A fizetés nem változott ( "+temp+" Ft )");
			}
		}
		function feladat2fuggveny1() {
			var temp2 = document.urlap2.pontszam.value*1;
			if(temp2>29) {
				alert("Jeles");
			}
			else {
				if(temp2>23) {
					alert("Jó");
				}
				else {
					if(temp2>17) {
						alert("Közepes");
					}
					else {
						if(temp2>13) {
							alert("Elégséges");
						}
						else {
							alert("Elégtelen");
						}
					}
				}
			}
		}
